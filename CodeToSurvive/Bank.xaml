<Window x:Class="CodeToSurvive.Bank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="Bank" Height="720" Width="1200">
    <!-- ===================== -->
    <!-- BANK BACKGROUND IMAGE -->
    <!-- ===================== -->
    <Window.Background>
        <ImageBrush ImageSource="/Assets/bank-bg.png"
                    Stretch="UniformToFill"/>
    </Window.Background>
    <!-- ===================== -->
    <!-- RESOURCES -->
    <!-- ===================== -->
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBrush" Color="#AA111827"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF22C55E"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF1F2937"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFEF4444"/>

        <Style x:Key="BankButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- ===================== -->
    <!-- MAIN LAYOUT -->
    <!-- ===================== -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- LEFT PANEL: ACCOUNT -->
        <!-- ===================== -->
        <Border Grid.Column="0"
                Background="{StaticResource PanelBrush}"
                CornerRadius="8"
                Padding="14" Margin="0,-2,0,2">
            <StackPanel>
                <TextBlock Text="💳 Account Overview"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,12"/>

                <TextBlock Text="Balance:"
                           Foreground="#FF9CA3AF"/>

                <TextBlock x:Name="BalanceText"
                           Text="$1250"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,12"/>

                <Separator/>

                <TextBlock Text="Loan Status"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,12,0,6"/>

                <TextBlock x:Name="LoanStatusText"
                           Text="Active Loan: None"
                           Foreground="#FF9CA3AF"/>

                <TextBlock x:Name="CreditScoreText"
                           Text="Credit Score: 650"
                           Foreground="#FF9CA3AF"/>
            </StackPanel>
        </Border>

        <!-- ===================== -->
        <!-- CENTER: BANK SERVICES -->
        <!-- ===================== -->
        <Border Grid.Column="1"
                Background = "#D7D0FF" 
                CornerRadius="10"
                Padding="20"
                BorderBrush="#FF334155"
                BorderThickness="2">

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🏦 Bank Services"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"/>

                <Button Content="Deposit Money"
                        Width="220"
                        Style="{StaticResource BankButtonStyle}"
                        Click="Deposit_Click"/>

                <Button Content="Withdraw Money"
                        Width="220"
                        Style="{StaticResource BankButtonStyle}"
                        Click="Withdraw_Click"/>

                <Button Content="Apply for Loan"
                        Width="220"
                        Background="#FF3B82F6"
                        Style="{StaticResource BankButtonStyle}"
                        Click="ApplyLoan_Click"/>

                <Button Content="Repay Loan"
                        Width="220"
                        Background="{StaticResource DangerBrush}"
                        Style="{StaticResource BankButtonStyle}"
                        Click="RepayLoan_Click"/>
            </StackPanel>
        </Border>

        <!-- ===================== -->
        <!-- RIGHT PANEL: INFO -->
        <!-- ===================== -->
        <Border Grid.Column="2"
                Background="{StaticResource PanelBrush}"
                CornerRadius="8"
                Padding="14">
            <StackPanel>
                <TextBlock Text="📊 Financial Tips"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,12"/>

                <TextBlock Text="• Maintain a good balance"
                           Foreground="#FF9CA3AF"
                           Margin="0,4"/>

                <TextBlock Text="• Avoid unnecessary loans"
                           Foreground="#FF9CA3AF"
                           Margin="0,4"/>

                <TextBlock Text="• Repay loans on time"
                           Foreground="#FF9CA3AF"
                           Margin="0,4"/>

                <Separator Margin="0,12"/>

                <TextBlock Text="Interest Rate"
                           Foreground="White"
                           FontWeight="Bold"/>

                <TextBlock Text="10% per cycle"
                           Foreground="#FF9CA3AF"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
