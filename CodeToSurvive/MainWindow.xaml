<Window x:Class="CodeToSurvive_P1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Code to Survive: Student Life Simulator"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- ============================= -->
    <!-- RESOURCES -->
    <!-- ============================= -->
    <Window.Resources>
        <Style x:Key="BuildingButtonNoHover" TargetType="Button">
            <!-- Keep default behavior -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Arrow"/>

            <!-- Disable ONLY hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="HudBg" Color="#AA020617"/>
        <SolidColorBrush x:Key="HudText" Color="White"/>
        <SolidColorBrush x:Key="HudMuted" Color="#FF9CA3AF"/>
    </Window.Resources>

    <!-- ============================= -->
    <!-- ROOT -->
    <!-- ============================= -->
    <Grid>

        <!-- ============================= -->
        <!-- CITY BACKGROUND -->
        <!-- ============================= -->
        <Image Source="pack://application:,,,/Assets/background.png"
                 Stretch="UniformToFill"/>

        <!-- ============================= -->
        <!-- GAME CANVAS -->
        <!-- ============================= -->
        <Canvas x:Name="GameCanvas"
                Focusable="True"
                KeyDown="GameCanvas_KeyDown">

            <!-- ============================= -->
            <!-- BUILDING IMAGES -->
            <!-- ============================= -->

            <!-- UNIVERSITY -->
            <Image Source="pack://application:,,,/Assets/uni-bg.png"
                   Width="280"
                   Height="220"
                   Canvas.Left="108"
                   Canvas.Top="42" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- SOFTWARE HOUSE -->
            <Image Source="pack://application:,,,/Assets/softwre-bg.png"
                   Width="220"
                   Height="300"
                   Canvas.Left="906"
                   Canvas.Top="451"/>

            <!-- HOUSE -->
            <Image Source="pack://application:,,,/Assets/home-bg.png"
                   Width="220"
                   Height="200"
                   Canvas.Left="532"
                   Canvas.Top="315"/>

            <!-- BANK -->
            <Image Source="pack://application:,,,/Assets/bank-bg.png"
                   Width="250"
                   Height="250"
                   Canvas.Left="135"
                   Canvas.Top="461"/>

            <!-- STOCK EXCHANGE -->
            <Image Source="pack://application:,,,/Assets/StockExchange_bg.png"
                   Width="240"
                   Height="260"
                   Canvas.Left="960"
                   Canvas.Top="-10" RenderTransformOrigin="0.645,-0.59"/>
            <!-- BINARY BOUTIQUE -->
            <!-- BINARY BOUTIQUE -->
            <Image Source="pack://application:,,,/Assets/Binary_Boutique.png"
                   Width="220"
                   Height="200"
                   Canvas.Left="820"
                   Canvas.Top="260"/>

            <!-- SYNTAX SNACKS -->
            <Image Source="pack://application:,,,/Assets/Syntax_Snacks.png"
                   Width="220"
                   Height="180"
                   Canvas.Left="470"
                   Canvas.Top="520"/>

            <!-- ============================= -->
            <!-- PLAYER -->
            <!-- ============================= -->
            <Image x:Name="PlayerAvatar"
                   Source="pack://application:,,,/Assets/PlayerSprite.png"
                   Width="60"
                   Height="80"
                   Canvas.Left="596"
                   Canvas.Top="183" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- ============================= -->
            <!-- INTERACTION PROMPT -->
            <!-- ============================= -->
            <Border x:Name="InteractionPrompt"
                    Background="#AA000000"
                    CornerRadius="6"
                    Padding="6"
                    Visibility="Collapsed"
                    Canvas.Left="560"
                    Canvas.Top="360">
                <TextBlock Text="Press ENTER"
                           Foreground="Green"
                           FontSize="16"
                           FontWeight="Bold"/>
            </Border>

            <!-- ============================= -->
            <!-- INTERACTION BUTTONS (INVISIBLE) -->
            <!-- ============================= -->

            <Button x:Name="BtnUniversity"
                    Width="280"
                    Height="220"
                    Canvas.Left="90"
                    Click="BtnUniversity_Click"
                    Style="{StaticResource BuildingButtonNoHover}"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="34"/>

            <Button x:Name="BtnSoftwareHouse"
                    Width="220"
                    Height="300"
                    Canvas.Left="904"
                    Canvas.Top="481"
                    Click="BtnSoftwareHouse_Click"
                    Style="{StaticResource BuildingButtonNoHover}" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button x:Name="BtnHouse"
                    Width="220"
                    Height="200"
                    Canvas.Left="542"
                    Canvas.Top="315"
                    Click="BtnHouse_Click"
                    Style="{StaticResource BuildingButtonNoHover}" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button x:Name="BtnBinaryBoutique"
                    Width="220"
                    Height="200"
                    Canvas.Left="820"
                    Canvas.Top="260"
                    Click="BtnBinaryBoutique_Click"
                    Style="{StaticResource BuildingButtonNoHover}"/>

            <Button x:Name="BtnSyntaxSnacks"
                    Width="220"
                    Height="180"
                    Canvas.Left="470"
                    Canvas.Top="520"
                    Click="BtnSyntaxSnacks_Click"
                    Style="{StaticResource BuildingButtonNoHover}"/>    


            <Button x:Name="BtnBank"
                    Width="250"
                    Height="250"
                    Canvas.Left="120"
                    Canvas.Top="455"
                    Click="BtnBank_Click"
                    Style="{StaticResource BuildingButtonNoHover}"
                    HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.54,0.324">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>

            <Button x:Name="BtnStockExchange"
                    Width="240"
                    Height="260"
                    Canvas.Left="954"
                    Click="BtnStockExchange_Click"
                    Style="{StaticResource BuildingButtonNoHover}"
                    RenderTransformOrigin="0.605,-1.58" Canvas.Top="15" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>

        <!-- ============================= -->
        <!-- HUD (NON-CLICKABLE) -->
        <!-- ============================= -->
        <Grid IsHitTestVisible="False">

            <!-- TOP LEFT -->
            <Border Background="{StaticResource HudBg}"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="12">
                <StackPanel>
                    <TextBlock x:Name="HudMoneyText"
                               Foreground="{StaticResource HudText}"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="HudEnergyText"
                               Foreground="{StaticResource HudText}"/>
                </StackPanel>
            </Border>

            <!-- TOP CENTER -->
            <Border Background="{StaticResource HudBg}"
                    CornerRadius="8"
                    Padding="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="12">
                <TextBlock x:Name="HudDayText"
                           Foreground="{StaticResource HudText}"
                           FontWeight="Bold"/>
            </Border>

            <!-- TOP RIGHT -->
            <Border Background="{StaticResource HudBg}"
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="12">
                <StackPanel>
                    <TextBlock x:Name="HudSkillText"
                               Foreground="{StaticResource HudText}"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="HudReputationText"
                               Foreground="{StaticResource HudText}"/>
                </StackPanel>
            </Border>

            <!-- BOTTOM LEFT -->
            <Border Background="{StaticResource HudBg}"
                    CornerRadius="8"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="12">
                <TextBlock Text="Move: W A S D | Enter: ENTER"
                           Foreground="{StaticResource HudMuted}"/>
            </Border>
        </Grid>

    </Grid>
</Window>
