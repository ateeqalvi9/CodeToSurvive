<Window x:Class="CodeToSurvive.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="StartupWindow"  Width="600" Height="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="CODE TO SURVIVE"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Button Content="Start New Game"
                Width="200"
                Height="40"
                Click="BtnNewGame_Click"/>

        <Button Content="Continue Game"
                Width="200"
                Height="40"
                Margin="0,10,0,0"
                Click="BtnContinue_Click"/>
    </StackPanel>
</Window>
