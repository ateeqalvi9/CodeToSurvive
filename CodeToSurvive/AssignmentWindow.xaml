<Window x:Class="CodeToSurvive.AssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="AssignmentWindow" Height="600" Width="900">
    <StackPanel Margin="10">
        <TextBlock x:Name="QuestionText" FontSize="16"/>
        <TextBlock x:Name="TimerText" Foreground="Red"/>

        <Button Content="Open Code Editor"
                Height="40"
                Click="OpenEditor_Click"/>
    </StackPanel>
</Window>
