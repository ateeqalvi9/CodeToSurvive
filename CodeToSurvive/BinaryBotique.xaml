<Window x:Class="CodeToSurvive.BinaryBotique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="BinaryBotique" Width="1200" Height="820"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E272C">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBrush" Color="#FF1F2937"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF10B981"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFEF4444"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#FF9CA3AF"/>
    </Window.Resources>


    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- ================================= -->
        <!-- LEFT: OUTFIT SELECTION BAR -->
        <!-- ================================= -->
        <Border Background="{StaticResource PanelBrush}" CornerRadius="14" Padding="14" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Available Outfits"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,12"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="OutfitList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="OutfitItem_Click"
                                        Margin="4"
                                        Padding="6"
                                        Background="{StaticResource CardBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding ImagePath}"
                                               Width="64" Height="64"
                                               Margin="0,0,8,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Price, StringFormat=${0}}"
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </StackPanel>
        </Border>


        <!-- ================================= -->
        <!-- RIGHT: MAIN PREVIEW AREA -->
        <!-- ================================= -->
        <Border Grid.Column="1"
                Background="{StaticResource PanelBrush}"
                CornerRadius="14"
                Padding="16">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- PLAYER PREVIEW -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12"
                        Padding="10"
                        Margin="0,0,12,0">

                    <Grid>
                        <Image x:Name="PlayerBaseImage"
                               Source="/Assets/PlayerSprite.png"
                               Width="260"/>

                        <Image x:Name="PlayerOutfitImage"
                               Width="260"
                               Opacity="0.95"/>
                    </Grid>
                </Border>


                <!-- OUTFIT DETAILS -->
                <Border Grid.Column="1"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="12"
                        Padding="14">

                    <StackPanel>
                        <TextBlock x:Name="OutfitNameText"
                                   Text="Select an Outfit"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <TextBlock x:Name="OutfitDescText"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,8,0,8"
                                   TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                            <TextBlock Text="Price:"
                                       Foreground="{StaticResource MutedBrush}"
                                       Width="80"/>
                            <TextBlock x:Name="OutfitPriceText"
                                       Foreground="{StaticResource SuccessBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Style Bonus:"
                                       Foreground="{StaticResource MutedBrush}"
                                       Width="80"/>
                            <TextBlock x:Name="OutfitStyleText"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button x:Name="BtnBuy"
                                    Content="Buy"
                                    Width="120"
                                    Margin="4"
                                    Click="BtnBuy_Click"
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White"/>

                            <Button x:Name="BtnEquip"
                                    Content="Equip"
                                    Width="120"
                                    Margin="4"
                                    Click="BtnEquip_Click"
                                    Background="{StaticResource SuccessBrush}"
                                    Foreground="White"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
