<Window x:Class="CodeToSurvive.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="ExamWindow" Height="420"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Background="#FF020617" Padding="20">
        <StackPanel>

            <TextBlock x:Name="ExamTitleText"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0 0 0 10"/>

            <TextBlock x:Name="ExamQuestionText"
                       FontSize="16"
                       Foreground="LightGray"
                       TextWrapping="Wrap"
                       Margin="0 0 0 20"/>

            <TextBox x:Name="AnswerBox"
                     Height="40"
                     FontSize="16"
                     Margin="0 0 0 15"/>

            <Button Content="Submit Exam"
                    Height="45"
                    FontSize="16"
                    Background="#FF22C55E"
                    Click="Submit_Click"/>
        </StackPanel>
    </Border>
</Window>
