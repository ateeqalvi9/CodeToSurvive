<Window x:Class="CodeToSurvive.SyntaxSnacks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="SyntaxSnacks" Width="1200"
        Height="820"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E272C">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBrush" Color="#FF1F2937"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF10B981"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFEF4444"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#FF9CA3AF"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- ============================== -->
        <!-- LEFT SIDE: CLICKABLE MEAL LIST -->
        <!-- ============================== -->
        <Border Background="{StaticResource PanelBrush}"
                CornerRadius="14"
                Padding="14"
                Margin="0,0,12,0">

            <StackPanel>
                <TextBlock Text="Menu"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,12"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <ItemsControl x:Name="MealList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="MealItem_Click"
                                        Background="{StaticResource CardBrush}"
                                        Margin="4"
                                        Padding="6">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding ImagePath}"
                                               Width="64"
                                               Height="64"
                                               Margin="0,0,8,0"/>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Price, StringFormat=${0}}"
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </StackPanel>
        </Border>



        <!-- ============================== -->
        <!-- RIGHT SIDE: PREVIEW + DETAILS -->
        <!-- ============================== -->
        <Border Grid.Column="1"
                Background="{StaticResource PanelBrush}"
                CornerRadius="14"
                Padding="16">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>


                <!-- PLAYER PANEL -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12"
                        Padding="10"
                        Margin="0,0,12,0">

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="You"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>

                        <Image Source="/Assets/PlayerSprite.png"
                               Width="260"/>

                        <TextBlock x:Name="PlayerStatsText"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,8,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>



                <!-- MEAL DETAILS -->
                <Border Grid.Column="1"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="12"
                        Padding="14">

                    <StackPanel>

                        <Image x:Name="MealImage"
                               Width="260"
                               Height="260"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                        <TextBlock x:Name="MealNameText"
                                   Text="Select a Meal"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <TextBlock x:Name="MealDescText"
                                   Foreground="{StaticResource MutedBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,8"/>


                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Price:"
                                       Foreground="{StaticResource MutedBrush}"
                                       Width="80"/>
                            <TextBlock x:Name="MealPriceText"
                                       Foreground="{StaticResource SuccessBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Energy:"
                                       Foreground="{StaticResource MutedBrush}"
                                       Width="80"/>
                            <TextBlock x:Name="MealEnergyText"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">

                            <Button x:Name="BtnOrder"
                                    Content="Order and Eat"
                                    Width="140"
                                    Margin="4"
                                    Background="{StaticResource AccentBrush}"
                                    Foreground="White"
                                    Click="BtnOrder_Click"/>

                            <Button Content="Close"
                                    Width="100"
                                    Margin="4"
                                    Background="{StaticResource DangerBrush}"
                                    Foreground="White"
                                    Click="BtnClose_Click"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
