<Window x:Class="CodeToSurvive.House"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="House" Height="750" Width="1200" WindowStartupLocation="CenterScreen"
        Background="#FF0F1720">
    <!-- ===================== -->
    <!-- RESOURCES -->
    <!-- ===================== -->
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF10B981"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF1F2937"/>

        <Style x:Key="SideButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- ===================== -->
    <!-- MAIN LAYOUT -->
    <!-- ===================== -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- LEFT PANEL: FOOD -->
        <!-- ===================== -->
        <Border Grid.Column="0"
                Background="{StaticResource PanelBrush}"
                CornerRadius="8"
                Padding="12">
            <StackPanel>
                <TextBlock Text="🍔 Food"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <Button Content="Eat Snacks (+10 Energy)"
                        Style="{StaticResource SideButtonStyle}"
                        Click="EatSnacks_Click"/>

                <Button Content="Cook Meal (+25 Energy)"
                        Style="{StaticResource SideButtonStyle}"
                        Click="CookMeal_Click"/>

                <Button Content="Order Food (-$20)"
                        Background="{StaticResource SecondaryBrush}"
                        Style="{StaticResource SideButtonStyle}"
                        Click="OrderFood_Click"/>

                <Separator Margin="0,12"/>

                <TextBlock x:Name="EnergyText"
                           Text="Energy: 75%"
                           Foreground="White"
                           FontWeight="Bold"/>

                <TextBlock x:Name="MoneyText"
                           Text="Money: $1250"
                           Foreground="White"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- ===================== -->
        <!-- CENTER: CHARACTER -->
        <!-- ===================== -->
        <Grid Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Border Background="#FF020617"
                    CornerRadius="12"
                    Padding="20"
                    BorderBrush="#FF334155"
                    BorderThickness="2">

                <StackPanel HorizontalAlignment="Center">

                    <!-- Character Image -->
                    <Image x:Name="PlayerCharacterImage"
                           Source="/Assets/Characters/player_default.png"
                           Width="220"
                           Height="420"
                           Stretch="Uniform"/>

                    <TextBlock Text="Player"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>

                    <TextBlock Text="Mood: Neutral"
                               Foreground="#FF9CA3AF"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ===================== -->
        <!-- RIGHT PANEL: CLOTHES -->
        <!-- ===================== -->
        <Border Grid.Column="2"
                Background="{StaticResource PanelBrush}"
                CornerRadius="8"
                Padding="12">
            <StackPanel>
                <TextBlock Text="👕 Dressing"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <Button Content="Casual Outfit ($50)"
                        Style="{StaticResource SideButtonStyle}"
                        Click="CasualOutfit_Click"/>

                <Button Content="Formal Outfit ($150)"
                        Style="{StaticResource SideButtonStyle}"
                        Click="FormalOutfit_Click"/>

                <Button Content="Developer Hoodie ($100)"
                        Style="{StaticResource SideButtonStyle}"
                        Click="HoodieOutfit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
