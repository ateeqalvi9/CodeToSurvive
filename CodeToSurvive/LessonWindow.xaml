<Window x:Class="CodeToSurvive.LessonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeToSurvive"
        mc:Ignorable="d"
        Title="LessonWindow"  Height="500" Width="800"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF020617" Offset="0"/>
                <GradientStop Color="#FF020617" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0 0 0 10">
                <TextBlock x:Name="LessonTitleText"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"/>

                <ProgressBar x:Name="LessonProgress"
                             Height="20"
                             Margin="0 10 0 0"
                             Maximum="100"/>
            </StackPanel>

            <!-- LESSON CONTENT -->
            <Border Grid.Row="1"
                    Background="#AA000000"
                    CornerRadius="10"
                    Padding="15">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LessonContentText"
                               FontSize="16"
                               Foreground="LightGray"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

            </Border>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 15 0 0">

                <Button x:Name="BtnNextLesson"
                        Content="Next Lesson →"
                        Width="140"
                        Height="40"
                        Margin="0 0 10 0"/>

                <Button x:Name="BtnStartAssignment"
                        Content="Start Assignment"
                        Width="160"
                        Height="40"
                        Background="#FF22C55E"
                        Foreground="Black"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
